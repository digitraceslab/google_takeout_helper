{
  "manifest_version": 3,
  "name": "Google Takeout Helper",
  "version": "0.1.3",
  "description": "Helper for study participants for requesting, downloading, and uploading Google Takeout data.",
  "permissions": [
      "tabs",
      "storage"
  ],
  "background": {
    "service_worker": "background.js",
    "scripts": ["browser-polyfill.js", "background.js"]
  },
  "action":{
      "default_popup": "popup.html",
      "default_icon": {
          "16": "images/icon16.png"
      }
  },
  "icons": {
      "16": "images/icon16.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://takeout.google.com/*",
        "https://takeout.digitraceslab.com/*"
      ],
      "js": [
        "browser-polyfill.js",
        "content.js"
      ]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
     "id": "google_takeout_helper@digitraceslab.com",
     "strict_min_version": "58.0"
    }
  }
}